<h1><%= @post.title %></h1>
<h2>
  <p><strong>Submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %> (<%= @post.user.email %>)</strong><p>
  <p>Updated <%=time_ago_in_words(@post.updated_at) %> ago</p><br>
</h2>

<% if policy(@post).update? -%>
    <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
<% end %>
<% if policy(@post).destroy? -%>
    <%= link_to "Delete", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
<% end -%>
<% if policy(@post).collaborate? -%>
    <%= link_to "Collaboration", post_collaborator_path(@post), class: 'btn btn-primary' %>
<% end -%>
<p><br></p>
<div class="row">
  <div class="col-md-12">
    <%= markdown(@post.body) %>
  </div>
</div>
