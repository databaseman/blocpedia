<h1><%= @post.title %></h1>
<small>
  submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %> (<%= @post.user.email %>)<br>
</small>
<div class="row">
  <div class="col-md-8">
    <%= markdown(@post.body) %>
  </div>

  <% if user_authorized_for_edit_post?(@post) -%>
    <div class="col-md-4">
      <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
    </div>
  <% end %>
  <% if user_authorized_for_delete_post?(@post) -%>
    <div class="col-md-4">
      <%= link_to "Delete", @post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
    </div>
  <% end -%>
  <% if user_authorized_for_collaboration_post?(@post) -%>
    <div class="col-md-4">
      <%= link_to "Collaboration", edit_collaborator_path(@post), class: 'btn btn-primary' %>
    </div>
  <% end -%>
</div>
