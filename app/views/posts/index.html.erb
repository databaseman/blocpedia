<h1>All Posts</h1>

<% if policy(current_user).premium? -%>
 <div class="pull-right">
   <%= link_to "New Post", new_post_path, class: 'btn btn-success' %><br>
 </div>
<% end %>

<ul>
 <% @posts.each do |post| %>
     <li>
       <%= link_to post.title, post %>
     </li>
 <% end %>
</ul>
 <%= will_paginate %>
