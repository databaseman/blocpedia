<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Wikiikki", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", '#' %></li>
          <li><%= link_to "Posts", posts_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", edit_user_registration_path %></li>
              <% if current_user.standard? %>
                <li><%= link_to "Upgrade", new_charge_path %></li>
              <% else %>
                <li><%= link_to "Downgrade", downgrade_path %></li>
              <% end %>
              <li><%= link_to "Cancel Account", '#' %></li>
              <li class="divider"></li>
              <li>
                <li><%= link_to "Log out", destroy_user_session_path, method: "delete" %></li>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", '#' %></li>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
<% if user_signed_in? %>
  <div class="center"><strong><%= current_user.name %></strong> (<%= current_user.email %>) </div>
<% end %>
