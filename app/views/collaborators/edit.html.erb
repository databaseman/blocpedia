<h1> Add / Remove Collaborators </h1>
<h2>Title: <%= @post.title %></h2>
<div>
  <div class="row">
    <div class="col-sm-3 center">
      <h3>Name</h3>
    </div>
    <div class="col-sm-3 center">
      <h3>Email</h3>
    </div>
    <div class="col-sm-1 center">
      <h3>Access</h3>
    </div>
  </div>
  <% @users.each do |user| %>
   <div class="row">
     <div class="col-sm-3 center">
        <%= user.name %>
     </div>
     <div class="col-sm-3 center">
        <%= user.email %>
     </div>
     <div class="col-sm-1">
       <%= user_part_of_collaboration?( user, @post) %>
     </div>
   </div>
  <% end %>
</div>
